<div class="container">
  <link rel="stylesheet" type="text/css" href="/styles.css" />
  <h1>Edit Event</h1>
  {{! <style> h1{} button{} </style> }}
  <form action="/edit/{{event.id}}?_method=put" method="POST">
    {{! <div class="form-group"> }}
    <label for="title">Title:</label>
    <input
      value="{{event.title}}"
      type="text"
      id="title"
      name="title"
      class="form-control"
    />

    {{! <div class="form-group"> }}
    <label for="description">Description:</label>
    <input
      value="{{event.description}}"
      type="text"
      id="description"
      name="description"
      class="form-control"
    />

    {{! <div class="form-group"> }}
    <label for="time">Time:</label>
    <input
      value="{{event.time}}"
      type="text"
      id="time"
      name="time"
      class="form-control"
    />

    {{! <div class="form-group"> }}
    <label for="owner">Owner:</label>
    <input
      value="{{event.owner}}"
      type="text"
      id="owner"
      name="owner"
      class="form-control"
    />
    <br />
    <button class="btn btn-info" type="submit">Edit</button>
    <a href="/Event" class="btn btn-secondary">Cancel</a>
  </form>
</div>

{{! can style here as necessary }}